<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Payment Form</title>
    <link rel="stylesheet" href="/CSS/payment.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <script src="/javascripts/payment.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h1>Confirm Your Payment</h1>
        <div class="upi">
            <input type="radio" id="upi" name="paytype" value="UPI" onclick="chk()">
            <label for="upi">UPI</label><br>
            <div class="first-row">
                <div class="owner">
                    <h3>Enter UPI id</h3>
                    <div class="input-field">
                        <input type="text" id="iupi" placeholder="phonenumber@upi">
                    </div>
                    <br>
                </div>
            </div>

            <div class="second-row">

                <button id="btn1" type="button" class="btn" onclick="validate1(document.getElementById('iupi'))">Verify and Pay</button>

                <img src="/IMAGES/upi.png" style="width: 100px; height: 40px; margin-left: 300px; margin-top: -10px; " alt="">

            </div>

        </div>
        <br>
        <div class="cards">

            <input type="radio" id="card" name="paytype" value="CARD" onclick="chk()">
            <label for="card">Card</label><br>
            <div class="first-row">
                <div class="owner">
                    <h3>Name on Card</h3>
                    <div class="input-field">
                        <input id="nc" type="text">
                    </div>
                </div>
                <div class="cvv">
                    <h3>CVV</h3>
                    <div class="input-field">
                        <input id="cvv" type="password">
                    </div>
                </div>
            </div>
            <div class="second-row">
                <div class="card-number">
                    <h3>Card Number</h3>
                    <div class="input-field">
                        <input id="cno" type="text">
                    </div>
                </div>
            </div>
            <div class="third-row">
                <h3>Expiry Date</h3>
                <div class="selection">
                    <div class="date">
                        <select name="months" id="months">
                            <option value="Jan">Jan</option>
                            <option value="Feb">Feb</option>
                            <option value="Mar">Mar</option>
                            <option value="Apr">Apr</option>
                            <option value="May">May</option>
                            <option value="Jun">Jun</option>
                            <option value="Jul">Jul</option>
                            <option value="Aug">Aug</option>
                            <option value="Sep">Sep</option>
                            <option value="Oct">Oct</option>
                            <option value="Nov">Nov</option>
                            <option value="Dec">Dec</option>
                        </select>
                        <select name="years" id="years">
                            <option value="2023">2023</option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                        </select>
                    </div>
                    <div class="card">
                        <img src="/IMAGES/mc.png" alt="">
                        <img src="/IMAGES/vi.png" alt="">
                        <img src="/IMAGES/pp.png" alt="">
                    </div>
                </div>
            </div>
            <button id="btn2" type="button" class="btn" onclick="validate2(document.getElementById('cno'),document.getElementById('cvv'))">Verify and Pay</button>
        </div>
    </div>
</body>

</html>